 @page
@model Univer.Pages.Students.DetailsModel
@{
    ViewData["Title"] = "Детали студента";
}
 
<style>
    /* Общие стили */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        color: #333;
        margin: 0;
        padding: 0;
    }
 
    .container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
    }
 
    h1, h2, h3 {
        font-weight: bold;
        color: #2c3e50;
    }
 
    a {
        text-decoration: none;
        color: #2980b9;
        transition: color 0.3s ease;
    }
 
        a:hover {
            color: #e74c3c;
        }
 
    /* Карточка для деталей */
    .details-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-in-out;
    }
 
    .fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
 
    .details-container h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #2c3e50;
        font-size: 1.8em;
    }
 
    dl.row {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 15px;
        margin-bottom: 20px;
    }
 
    dt {
        font-weight: bold;
        color: #2c3e50;
    }
 
    dd {
        margin: 0;
        color: #333;
    }
 
    /* Таблица курсов */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
 
    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
 
    th {
        background-color: #2c3e50;
        color: #fff;
    }
 
    tr:hover {
        background-color: #f1f1f1;
    }
 
    /* Кнопки */
    .button {
        display: inline-block;
        padding: 10px 20px;
        background: linear-gradient(135deg, #2980b9, #1abc9c);
        color: #fff;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1em;
        transition: all 0.3s ease;
    }
 
        .button:hover {
            background: linear-gradient(135deg, #e74c3c, #e67e22);
            transform: scale(1.05);
        }
 
    /* Ссылки действий */
    .actions a {
        margin-right: 10px;
        color: #2980b9;
        font-weight: bold;
        transition: color 0.3s ease;
    }
 
        .actions a:hover {
            color: #e74c3c;
        }
</style>
 
<div class="container">
    <div class="details-container">
        <h2>Детали студента</h2>
        <dl class="row">
            <dt class="col-sm-2">Фамилия</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Student.LastName)</dd>
            <dt class="col-sm-2">Имя</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Student.FirstName)</dd>
            <dt class="col-sm-2">Дата зачисления</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Student.EnrollmentDate)</dd>
        </dl>
 
        <h3>Курсы студента</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Название курса</th>
                </tr>
            </thead>
            <tbody>
                <!-- Здесь можно добавить данные о курсах -->
                <tr>
                    <td>Курс 1</td>
                </tr>
                <tr>
                    <td>Курс 2</td>
                </tr>
            </tbody>
        </table>
    </div>
 
    <div class="actions" style="text-align: center; margin-top: 20px;">
        <a asp-page="./Edit" asp-route-id="@Model.Student?.Id" class="button">Редактировать</a>
        <a asp-page="./Index" class="button">Назад к списку</a>
    </div>
</div>